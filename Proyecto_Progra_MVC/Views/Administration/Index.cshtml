@model RoleViewModel



<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <h2>Roles</h2>
                </div>

                <div class="input-group">
                    <a class="btn btn-primary" asp-action="upsert">
                        <i class="fa-solid fa-circle-plus"></i> New Role
                    </a>
                </div>
                <div class="contact-widget">
                <div class="section-title contact-title inputs">
                @foreach (var role in Model.Roles)
                {
                    <div class="row">
                        <div class="col-lg-6"><h2>@role.Name</h2>  </div>
                        <div class="col-lg-6 text-right">
                            <a class="btn btn-outline-info" asp-action="upsert" asp-route-id="@role.Id">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a class="btn btn-outline-danger" asp-action="delete" asp-route-id="@role.Id">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                            <a class="btn btn-outline-dark" asp-action="usersrole" asp-route-id="@role.Id">
                                <i class="fa-solid fa-users"></i>
                            </a>
                        </div>
                    </div>
                }
                </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
