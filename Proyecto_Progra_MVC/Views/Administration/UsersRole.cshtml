@model UserRoleViewModel


<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                     <h2>Users Role</h2>
                </div>
                <form method="post">

                    <div class="form-group">
                        <div class="clearfix separator"></div>
                    </div>

                    @for (int i = 0; i < Model.Users.Count; i++)
                    {
                        <div class="row">
                            <div class="input-group inputs">
                                <div class="col-lg-6">
                                    <input type="hidden" asp-for="@Model.Users[i].Email" />
                                    <input type="checkbox" asp-for="@Model.Users[i].Selected" />
                                </div>
                                <div class="col-lg-6">
                                    @Model.Users[i].Email
                                </div>
                            </div>
                        </div>
                    }
                    <br />
                    <partial name="_CancelUpsertButtonsPartial" model="Model.RoleId" />

                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
