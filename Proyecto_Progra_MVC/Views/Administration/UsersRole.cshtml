@model UserRoleViewModel

<style>

    .header {
        margin-bottom: 20px;
    }

        .header h3 {
            margin-bottom: 5px;
            margin-top: 25px;
        }

    .separator {
        height: 1px;
        background: #e8e8e8;
        margin: 0px -25px;
    }

    .inputs {
        margin-top: 25px;
    }

        .inputs label {
            letter-spacing: 1px;
            margin-bottom: 7px;
        }

        .inputs #submit #cancel {
            width: 100%;
            margin-top: 20px;
            padding: 15px 0;
            letter-spacing: 1px;
        }
</style>

<div class="form-row">
    <div class="form-group col-7">
        <form method="post">
            <div class="form-group header">
                <h3>Users Role</h3>
            </div>

            <div class="form-group">
                <div class="clearfix separator"></div>
            </div>

            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <div class="input-group inputs">
                    <div class="col-2">
                        <input type="hidden" asp-for="@Model.Users[i].Email" />
                        <input type="checkbox" asp-for="@Model.Users[i].Selected" />
                    </div>
                    <div class="col-5">
                        @Model.Users[i].Email
                    </div>
                </div>
            }

            <div class="form-group inputs">
                <a id="cancel" type="button" class="btn btn-outline-secondary" asp-action="index">
                    <i class="fa-solid fa-ban"></i> Cancel
                </a>
                <button id="submit" type="submit" class="btn btn-outline-primary">
                    <i class="fa-solid fa-floppy-disk"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
