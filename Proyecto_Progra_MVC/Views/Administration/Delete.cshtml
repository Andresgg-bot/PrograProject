@model Role


<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                     <h2>Delete Role</h2>
                </div>
                <form method="post">
                    <div class="form-group header">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                    </div>

                    <div class="form-group">
                        <div class="clearfix separator"></div>
                    </div>

                    <div class="form-group inputs">
                        <input type="hidden" asp-for="Id"/>
                        <label asp-for="Name" class="form-text"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name" autofocus readonly="readonly"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group inputs">
                        <a id="cancel" class="btn btn-outline-secondary" asp-action="index">
                            <i class="fa-solid fa-ban"></i> Cancel
                        </a>
                        <button id="submit" type="submit" class="btn btn-outline-danger">
                            <i class="fa-solid fa-trash"></i>Delete
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}