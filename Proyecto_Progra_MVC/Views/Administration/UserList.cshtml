@using Proyecto_Progra_MVC.Application.Handlers
@using Microsoft.AspNetCore.Authorization
@model List<UserViewModel>

<style>

    .header {
        margin-bottom: 20px;
    }

        .header h3 {
            margin-bottom: 5px;
            margin-top: 25px;
        }

    .separator {
        height: 1px;
        background: #e8e8e8;
        margin: 0px -25px;
    }

    .inputs {
        margin-top: 25px;
    }

        .inputs label {
            letter-spacing: 1px;
            margin-bottom: 7px;
        }

        .inputs #submit {
            width: 100%;
            margin-top: 20px;
            padding: 15px 0;
            letter-spacing: 1px;
        }
</style>

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Users List</h2>
    </div>
</div>
<br />
<div class="p-4 border rounded">
    <table id="saludos" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Nombre</th>
                <th>Role</th>
                @if ((await _authorizationService.AuthorizeAsync(User, PermissionTypesNames.MANAGEROLES)).Succeeded)
                {
                <th></th>
                }
            </tr>
        </thead>
        <tbody class="table-light">
            @foreach (var user in Model)
            {
            <tr>
                <td>@user.Email</td>
                <td class="text-success">@string.Join(" - ", user.Roles.ToList())</td>
                @inject IAuthorizationService _authorizationService
                @if ((await _authorizationService.AuthorizeAsync(User, PermissionTypesNames.MANAGEROLES)).Succeeded)
                {
                    <td>
                        <a class="btn btn-primary" asp-action="EditRole" asp-route-id="@user.Id">
                            Edit Role
                        </a>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
