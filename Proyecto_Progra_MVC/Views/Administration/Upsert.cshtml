@model Role


<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <h2>Role</h2>
                </div>
                <form method="post">
                    <div class="section-title contact-title form-group header">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    
                    <div class="form-group">
                        <div class="clearfix separator"></div>
                    </div>

                    <div class="form-group inputs" style="color: #fff">
                        <input type="hidden" asp-for="Id" />

                        <label asp-for="Name" class="form-text"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name" autofocus />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <partial name="_CancelUpsertButtonsPartial" model="Model.Id" />

                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
