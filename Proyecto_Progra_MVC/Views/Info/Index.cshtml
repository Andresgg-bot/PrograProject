@using Proyecto_Progra_MVC.Application.Handlers
@using Microsoft.AspNetCore.Authorization
@model List<Info>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">User Progress</h2>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="info" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>User</th>
                <th>Weight</th>
                <th>Height</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Physical Activity</th>
                <th>Date</th>
                <th>Calorie Calculator</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-light">
            @foreach (var info in Model)
            {
                <tr id="info_@info.IdInfo">
                    <td>@info.User.Name @info.User.Lastname</td>
                    <td>@info.Weight</td>
                    <td>@info.Height</td>
                    <td>@info.Age</td>
                    <td>@info.Gender</td>
                    <td>@info.PhysicalActivity</td>
                    <td>@info.InfoDate</td>
                    <td>
                        <div class="text-center">
                        <a href="/info/calculate/@info.IdInfo" class="btn btn-success text-white" style="cursor:pointer">
                            <i class="fa-solid fa-heart-pulse"></i> Calculate
                        </a>
                        </div>
                    </td>
                    <td>
                        <div class="text-center">
                                    @inject IAuthorizationService _authorizationService
                                    @if ((await _authorizationService.AuthorizeAsync(User, PermissionTypesNames.WRITEROLES)).Succeeded)
                                    {
                                <a href="/info/update/@info.IdInfo" class="btn btn-success text-white" style="cursor:pointer">
                                    <i class="fas fa-edit"></i>
                                </a>
                                    }
                                    @if (User.IsInRole("Administrator"))
                                    {
                                <a onclick=Delete("@info.IdInfo") class="btn btn-danger text-white" style="cursor:pointer">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                                    }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

    function Delete(id) {
        swal({
            title: "Are you sure you want to delete the information?",
            text: "The data cannot be recovered you do not see that it has been deleted!",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "DELETE",
                    url: "/info/delete/" + id,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            $("#info_" + id).remove();
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                });
            }
        });
    }

</script>
