@using Proyecto_Progra_MVC.Domain.Models.Enum
@model Info

@{
    var titulo = "Edit progress";
}

<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="leave-comment">
                    <form method="post">
                        <div class="row p-3 border">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12 border-bottom">
                                <h2 class="text-light">@titulo</h2>
                            </div>
                            <div class="col-8 pt-4">
                                <div class="form-group row">
                                    <div class="col-4">
                                        <p><label asp-for="IdInfo"></label></p>
                                    </div>
                                    <div class="col-8">
                                        <p><input asp-for="IdInfo" class="form-control" /></p>
                                        <span asp-validation-for="IdInfo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                        <p><label asp-for="Weight"></label></p>
                                    </div>
                                    <div class="col-8">
                                         <p><input asp-for="Weight" class="form-control" /></p>
                                        <span asp-validation-for="Weight" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                        <p><label asp-for="Height"></label></p>
                                    </div>
                                    <div class="col-8">
                                         <p><input asp-for="Height" class="form-control" /></p>
                                        <span asp-validation-for="Height" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                        <p><label asp-for="Age"></label></p>
                                    </div>
                                    <div class="col-8">
                                         <p><input asp-for="Age" class="form-control" /></p>
                                        <span asp-validation-for="Age" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                        <p><label asp-for="PhysicalActivity" class="form-text">Physical Activity</label></p>
                                    </div>
                                    <div class="col-8">
                                        <select asp-for="PhysicalActivity" class="form-control" aria-describedby="helpPhysicalActivity">
                                            @foreach (var activity in Enum.GetValues(typeof(PhysicalActivity)))
                                            {
                                                <option value="@((int)activity)">@Enum.GetName(typeof(PhysicalActivity), activity)</option>
                                            }
                                        </select>
                                        <small id="helpPhysicalActivity" class="form-text text-muted">
                                            Physical activity intensity.
                                        </small>
                                        <span asp-validation-for="PhysicalActivity" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                       <p> <label asp-for="Gender" class="form-text"></label></p>
                                    </div>
                                    <div class="col-8">
                                         <p><input asp-for="Gender" class="form-control" /></p>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                        <p><label asp-for="InfoDate">Date</label></p>
                                    </div>
                                    <div class="col-8">
                                         <p><input asp-for="InfoDate" class="form-control" /></p>
                                        <span asp-validation-for="InfoDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-4">
                                        <p><label asp-for="UserId">User</label></p>
                                    </div>
                                    <div class="col-8" style="color:#FFFF">
                                        <input asp-for="UserId" class="form-control" hidden />
                                        @Model.User.Email | @Model.User.Name @Model.User.Lastname
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-8 offset-4">
                                        <div class="row">
                                            <div class="col">
                                                <button type="submit" class="btn btn-primary form-control">Save</button>
                                            </div>
                                            <div class="col">
                                                <a href="/info/index/@Model.UserId" class="btn btn-success form-control">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
<partial name="_ValidationScriptsPartial" />

}
