@model List<Progress>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Progress list</h2>
    </div>
    <div class="col-6 text-right">
        <a href="/progress/upsert/" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New Progress</a>
    </div>
</div>

<br />
<div class="p-4 border rounded">
    <table id="progress" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Weight</th>
                <th>Height</th>
                <th>Body Mass Index</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-light">
            @foreach (var progress in Model)
            {
                <tr id="progress_@progress.Id">
                    <td>@progress.Weight</td>
                    <td>@progress.Height</td>
                    <td>@progress.BMI</td>
                    <td>
                        <div class="text-center">
                            <a href="/progress/upsert/@progress.Id" class="btn btn-success text-white" style="cursor:pointer">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a onclick=Delete("@progress.Id") class="btn btn-danger text-white" style="cursor:pointer">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>

    function Delete(id) {
        swal({
            title: "Esta seguro de borrar el Progreso?",
            text: "Los datos no pueden ser recuperados no vez que hayan sido borrados!",
            icon: "warning",
            buttons: true,
            dangerMode: true
        }).then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    type: "DELETE",
                    url: "/progress/delete/" + id,
                    success: function (data) {
                        if (data.success) {
                            toastr.success(data.message);
                            $("#progress_" + id).remove();
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                });
            }
        });
    }

</script>