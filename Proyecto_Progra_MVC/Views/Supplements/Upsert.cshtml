@model Supplements

<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <h2>Supplement</h2>
                </div>
                <form method="post" enctype="multipart/form-data" asp-action="Upsert">

                    <input asp-for="Photo" class="form-control" hidden />
                    <div class="form-group header">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <div class="clearfix separator"></div>
                    </div>

                    <div class="form-group inputs">

                        <input asp-for="Id" class="form-control" hidden />

                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>


                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>

                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>

                        <br />
                        <div class="form-group row">
                            <div class="col-sm-12 align-items-center">
                                <input name="file" type="file" class="form-control form-control-user" />
                            </div>
                        </div>
                    </div>

                    <div class="">
                        <div class="col-lg-6">
                            <a asp-action="Index" class="btn btn-outline-dark" form-control">Back</a>
                        </div>
                        <div class="">
                            <button type="submit" class="btn btn-outline-info" form-control">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }
