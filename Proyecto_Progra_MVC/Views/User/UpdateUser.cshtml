@model User

<section class="class-timetable-section spad">
<div class="form-row">
    <div class="form-group col-5">
        <form method="post">
            <div class="form-group header">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>User</h3>
            </div>
            <div class="form-group">
                <div class="clearfix separator"></div>
            </div>

            <div class="form-group inputs">

                <input asp-for="Id" class="form-control" hidden/>

                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>


                <label asp-for="Lastname"></label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>

                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="UserName" class="form-control" hidden/>

                <input asp-for="PasswordHash" class="form-control" hidden/>

            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-info" form-control">Save</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-dark" form-control">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</section>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    }
